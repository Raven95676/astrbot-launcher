{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AstrBot Launcher",
  "version": "0.1.0",
  "identifier": "com.github.raven95676.astrbot-launcher",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AstrBot Launcher",
        "width": 1000,
        "height": 680,
        "minWidth": 1000,
        "minHeight": 680
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; frame-src http://localhost:*; connect-src 'self' https://api.github.com https://github.com https://objects.githubusercontent.com http://localhost:*"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVDNEQxQzQ5NUJBRjE4Q0YKUldUUEdLOWJTUnhOWEZ3K2hIVzMvY00xeEowQ1dzdjYwbkp0Nm9obkQ1S00rQVZlampSbm1rc3UK",
      "endpoints": [
        "https://github.com/Raven95676/astrbot-launcher/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
